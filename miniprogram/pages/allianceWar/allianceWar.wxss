/* pages/allianceWar/allianceWar.wxss */

.war-page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, #1a0f2e 0%, #0d0a1a 100%);
  display: flex;
  flex-direction: column;
  font-family: "STKaiti", "KaiTi", serif;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(180deg, #3d1a5c 0%, #2a1040 100%);
  border-bottom: 4rpx solid #8b4dff;
}

.header-back {
  font-size: 28rpx;
  color: #c9a0ff;
  padding: 10rpx 20rpx;
}

.header-title {
  flex: 1;
  font-size: 42rpx;
  font-weight: bold;
  color: #ffd700;
  text-align: center;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.5);
}

.header-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.header-status.NOT_STARTED {
  background: rgba(150, 150, 150, 0.3);
  color: #999;
}

.header-status.REGISTERING {
  background: rgba(46, 204, 113, 0.3);
  color: #2ecc71;
  animation: pulse 1.5s infinite;
}

.header-status.IN_PROGRESS {
  background: rgba(231, 76, 60, 0.3);
  color: #e74c3c;
  animation: pulse 1s infinite;
}

.header-status.FINISHED {
  background: rgba(52, 152, 219, 0.3);
  color: #3498db;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: linear-gradient(180deg, #2a1040 0%, #1a0f2e 100%);
  border-bottom: 2rpx solid #5a3d7a;
}

.tab-item {
  flex: 1;
  padding: 25rpx 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #a080c0;
  border-bottom: 3rpx solid transparent;
}

.tab-item.active {
  color: #ffd700;
  border-bottom-color: #ffd700;
  background: rgba(255, 215, 0, 0.1);
}

/* 内容区 */
.content {
  flex: 1;
  padding: 20rpx;
}

.tab-content {
  padding-bottom: 40rpx;
}

/* 区块通用样式 */
.section {
  background: rgba(60, 30, 90, 0.5);
  border: 2rpx solid #5a3d7a;
  border-radius: 16rpx;
  margin-bottom: 25rpx;
  overflow: hidden;
}

.section-title {
  padding: 20rpx 25rpx;
  font-size: 30rpx;
  color: #ffd700;
  font-weight: bold;
  background: linear-gradient(90deg, rgba(139, 77, 255, 0.3) 0%, transparent 100%);
  border-bottom: 1rpx solid rgba(139, 77, 255, 0.3);
}

/* 规则列表 */
.rules-list {
  padding: 15rpx;
}

.rule-item {
  display: flex;
  align-items: center;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid rgba(90, 61, 122, 0.5);
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.rule-text {
  flex: 1;
}

.rule-title {
  display: block;
  color: #e0c0ff;
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.rule-desc {
  display: block;
  color: #a080c0;
  font-size: 24rpx;
}

/* 状态区域 */
.status-info {
  padding: 15rpx 25rpx;
}

.status-row {
  display: flex;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(90, 61, 122, 0.3);
}

.status-row:last-child {
  border-bottom: none;
}

.status-label {
  width: 180rpx;
  color: #a080c0;
  font-size: 26rpx;
}

.status-value {
  flex: 1;
  color: #e0c0ff;
  font-size: 26rpx;
}

.status-value.highlight {
  color: #ffd700;
  font-weight: bold;
}

/* 报名区域 */
.register-area {
  padding: 30rpx;
  text-align: center;
}

.register-tip {
  font-size: 28rpx;
  color: #a080c0;
  margin-bottom: 25rpx;
}

.register-tip.success {
  color: #2ecc71;
}

.register-tip.battle {
  color: #e74c3c;
  font-size: 32rpx;
  font-weight: bold;
}

.register-tip.finished {
  color: #3498db;
  font-size: 32rpx;
}

.my-status {
  font-size: 26rpx;
  color: #ffd700;
  margin-bottom: 20rpx;
}

.btn-register {
  display: inline-block;
  padding: 25rpx 80rpx;
  background: linear-gradient(180deg, #8b4dff 0%, #6a3ac7 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(139, 77, 255, 0.4);
}

.btn-cancel-register {
  display: inline-block;
  padding: 25rpx 80rpx;
  background: linear-gradient(180deg, #e74c3c 0%, #c0392b 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
}

.btn-view-result {
  display: inline-block;
  padding: 20rpx 60rpx;
  background: linear-gradient(180deg, #3498db 0%, #2980b9 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 测试按钮 */
.test-buttons {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed rgba(139, 77, 255, 0.3);
}

.btn-test {
  display: inline-block;
  padding: 15rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #a080c0;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin: 5rpx;
}

/* 奖励列表 */
.rewards-list {
  padding: 10rpx;
}

.reward-item {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(90, 61, 122, 0.3);
}

.reward-item:last-child {
  border-bottom: none;
}

.reward-title {
  display: block;
  color: #ffd700;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.reward-desc {
  display: block;
  color: #a080c0;
  font-size: 24rpx;
}

/* 参战名单 */
.participants-list {
  padding: 10rpx;
}

.participant-header {
  display: flex;
  padding: 15rpx 10rpx;
  background: rgba(139, 77, 255, 0.2);
  font-size: 24rpx;
  color: #c9a0ff;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.participant-item {
  display: flex;
  padding: 18rpx 10rpx;
  border-bottom: 1rpx solid rgba(90, 61, 122, 0.3);
  font-size: 24rpx;
  color: #e0c0ff;
}

.participant-item.is-me {
  background: rgba(255, 215, 0, 0.1);
  border: 1rpx solid rgba(255, 215, 0, 0.3);
  border-radius: 8rpx;
}

.col-num { width: 80rpx; text-align: center; }
.col-name { flex: 1.5; }
.col-alliance { flex: 1.5; }
.col-status { flex: 1; text-align: center; }
.col-score { flex: 1; text-align: center; }

/* 名字颜色 */
.col-name.shu { color: #e74c3c; }
.col-name.wei { color: #3498db; }
.col-name.wu { color: #2ecc71; }

/* 状态颜色 */
.col-status.WAITING { color: #f1c40f; }
.col-status.IN_BATTLE { color: #e74c3c; }
.col-status.SPECTATING { color: #7f8c8d; }
.col-status.WINNER { color: #2ecc71; }

/* 对战记录 */
.battles-list {
  padding: 10rpx;
}

.battle-item {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
}

.battle-round {
  font-size: 24rpx;
  color: #a080c0;
  margin-bottom: 15rpx;
}

.battle-players {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.battle-player {
  flex: 1;
  text-align: center;
}

.battle-player.winner {
  color: #2ecc71;
}

.battle-player.loser {
  color: #7f8c8d;
}

.player-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.player-score, .player-alliance {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
}

.battle-vs {
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #ffd700;
  font-weight: bold;
}

.battle-result {
  text-align: center;
  font-size: 24rpx;
  color: #a080c0;
  padding-top: 10rpx;
  border-top: 1rpx solid rgba(90, 61, 122, 0.3);
}

.winner-name {
  color: #ffd700;
  font-weight: bold;
}

/* 排名列表 */
.ranking-list {
  padding: 10rpx;
}

.ranking-header {
  display: flex;
  padding: 15rpx 10rpx;
  background: rgba(139, 77, 255, 0.2);
  font-size: 24rpx;
  color: #c9a0ff;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.ranking-item {
  display: flex;
  padding: 18rpx 10rpx;
  border-bottom: 1rpx solid rgba(90, 61, 122, 0.3);
  font-size: 24rpx;
  color: #e0c0ff;
}

.ranking-item.rank-1 {
  background: linear-gradient(90deg, rgba(255, 215, 0, 0.2) 0%, transparent 100%);
}

.ranking-item.rank-2 {
  background: linear-gradient(90deg, rgba(192, 192, 192, 0.2) 0%, transparent 100%);
}

.ranking-item.rank-3 {
  background: linear-gradient(90deg, rgba(205, 127, 50, 0.2) 0%, transparent 100%);
}

.ranking-item.is-me {
  background: rgba(255, 215, 0, 0.15);
  border: 1rpx solid rgba(255, 215, 0, 0.3);
  border-radius: 8rpx;
}

.col-rank { width: 80rpx; text-align: center; }
.col-flags { flex: 0.8; text-align: center; }
.col-members { flex: 0.8; text-align: center; }
.col-wins { flex: 0.8; text-align: center; }

/* 奖励详情 */
.rewards-detail {
  padding: 10rpx 20rpx;
}

.reward-group {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid rgba(90, 61, 122, 0.3);
}

.reward-group:last-child {
  border-bottom: none;
}

.reward-group-title {
  font-size: 26rpx;
  color: #ffd700;
  margin-bottom: 12rpx;
}

.reward-items {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.reward-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: rgba(139, 77, 255, 0.3);
  color: #e0c0ff;
  font-size: 22rpx;
  border-radius: 6rpx;
}

/* 空状态 */
.empty-state {
  padding: 60rpx;
  text-align: center;
  color: #7f8c8d;
  font-size: 26rpx;
}
