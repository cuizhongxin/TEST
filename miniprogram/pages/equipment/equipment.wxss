/* pages/equipment/equipment.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 16rpx;
  display: block;
}

.general-section {
  margin-bottom: 30rpx;
}

.general-list {
  white-space: nowrap;
}

.general-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  margin-right: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.general-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
}

.general-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid #8b6914;
}

.general-avatar image {
  width: 100%;
  height: 100%;
}

.general-name {
  font-size: 24rpx;
  color: #fff;
  margin-top: 8rpx;
}

.equipment-section {
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
  padding: 20rpx;
}

.equipment-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.equip-slot {
  width: calc(50% - 8rpx);
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  padding: 16rpx;
  border: 2rpx solid #8b6914;
}

.slot-label {
  font-size: 24rpx;
  color: #aaa;
  display: block;
  margin-bottom: 8rpx;
}

.slot-content {
  display: flex;
  flex-direction: column;
}

.equip-name {
  font-size: 28rpx;
  font-weight: bold;
}

.equip-attr {
  font-size: 22rpx;
  color: #7fff00;
  margin-top: 4rpx;
}

.slot-empty {
  color: #666;
  font-size: 24rpx;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  width: 80%;
  max-height: 70vh;
  background: #4a3728;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 2rpx solid #8b6914;
}

.modal-title {
  font-size: 32rpx;
  color: #ffd700;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}

.equip-list {
  max-height: 50vh;
}

.equip-item {
  padding: 20rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.equip-item-name {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
}

.equip-item-attr {
  font-size: 24rpx;
  color: #7fff00;
}

.empty-tip {
  text-align: center;
  color: #aaa;
  padding: 40rpx;
}

.modal-btn {
  margin-top: 20rpx;
  text-align: center;
  padding: 16rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 8rpx;
  color: #ffd700;
  font-size: 28rpx;
}
