/* pages/training/training.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 16rpx;
  display: block;
}

.general-section {
  margin-bottom: 30rpx;
}

.general-list {
  white-space: nowrap;
}

.general-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  margin-right: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.general-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
}

.general-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid #8b6914;
}

.general-avatar image {
  width: 100%;
  height: 100%;
}

.general-name {
  font-size: 24rpx;
  color: #fff;
  margin-top: 8rpx;
}

.general-level {
  font-size: 20rpx;
  color: #7fff00;
}

.mode-section, .food-section {
  margin-bottom: 30rpx;
}

.mode-list, .food-list {
  display: flex;
  gap: 16rpx;
}

.mode-item, .food-item {
  flex: 1;
  padding: 20rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  text-align: center;
}

.mode-item.active, .food-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
}

.mode-name, .food-name {
  font-size: 28rpx;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 20rpx;
  color: #aaa;
}

.food-count {
  font-size: 22rpx;
  color: #7fff00;
  display: block;
  margin-bottom: 4rpx;
}

.food-effect {
  font-size: 20rpx;
  color: #ffd700;
}

.train-btn {
  text-align: center;
  padding: 24rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 12rpx;
  color: #ffd700;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}
