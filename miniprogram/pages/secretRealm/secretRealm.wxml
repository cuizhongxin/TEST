<!--pages/secretRealm/secretRealm.wxml-->
<view class="page-container">
  <view class="header">
    <text class="title">秘境探索</text>
  </view>

  <!-- 秘境列表 -->
  <view class="realm-section">
    <view class="realm-card" wx:for="{{realms}}" wx:key="id" bindtap="enterRealm" data-id="{{item.id}}">
      <view class="realm-icon">{{item.icon}}</view>
      <view class="realm-info">
        <text class="realm-name">{{item.name}}</text>
        <text class="realm-desc">{{item.description}}</text>
        <text class="realm-reward">奖励: {{item.reward}}</text>
      </view>
      <view class="realm-status">
        <text class="status-text" wx:if="{{item.available}}">可进入</text>
        <text class="status-text locked" wx:else>冷却中</text>
        <text class="cooldown" wx:if="{{!item.available}}">{{item.cooldown}}</text>
      </view>
    </view>
  </view>

  <!-- 今日奖励 -->
  <view class="reward-section">
    <text class="section-title">今日探索奖励</text>
    <view class="reward-list">
      <view class="reward-item" wx:for="{{todayRewards}}" wx:key="index">
        <text class="reward-icon">{{item.icon}}</text>
        <text class="reward-name">{{item.name}} ×{{item.count}}</text>
      </view>
    </view>
    <view class="empty-tip" wx:if="{{todayRewards.length === 0}}">
      <text>今日暂无探索记录</text>
    </view>
  </view>
</view>
