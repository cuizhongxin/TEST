/* pages/secretRealm/secretRealm.wxss */
page {
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
  height: 100vh;
  overflow: hidden;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  color: #e8d5b0;
  font-family: 'STKaiti', 'KaiTi', serif;
}

/* ==================== 顶部导航 ==================== */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 12rpx;
  background: linear-gradient(180deg, #2a1a0f 0%, #3d2817 100%);
  border-bottom: 2rpx solid #8b6914;
  flex-shrink: 0;
}

.realm-tabs {
  display: flex;
  gap: 6rpx;
}

.tab-item {
  padding: 5rpx 12rpx;
  background: linear-gradient(180deg, #4a3a28 0%, #3a2a18 100%);
  border: 1rpx solid #5a4a3a;
  border-radius: 4rpx;
  font-size: 14rpx;
  color: #a89070;
}

.tab-item.active {
  background: linear-gradient(180deg, #8b6914 0%, #6b4914 100%);
  border-color: #c9a227;
  color: #ffd700;
}

.tab-item.locked { opacity: 0.5; }
.lock-icon { font-size: 10rpx; margin-left: 2rpx; }

.back-btn {
  padding: 5rpx 12rpx;
  background: linear-gradient(180deg, #4a3a28 0%, #3a2a18 100%);
  border: 1rpx solid #5a4a3a;
  border-radius: 4rpx;
  font-size: 14rpx;
  color: #c9a227;
}

/* ==================== 主内容区 ==================== */
.main-content {
  flex: 1;
  display: flex;
  padding: 6rpx;
  gap: 6rpx;
  overflow: hidden;
}

/* ==================== 左侧面板 ==================== */
.left-panel {
  flex: 2;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

/* 奖励物品网格 - 优化展示 */
.rewards-section {
  flex: 1;
  background: rgba(0,0,0,0.5);
  border: 2rpx solid #3a5a8a;
  border-radius: 6rpx;
  overflow: hidden;
}

.rewards-scroll {
  height: 100%;
  padding: 6rpx;
}

.rewards-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

/* 奖品卡片 - 更清晰 */
.reward-item {
  width: 75rpx;
  background: linear-gradient(180deg, #1a2a4a 0%, #0a1a3a 100%);
  border: 2rpx solid #3a5a8a;
  border-radius: 6rpx;
  padding: 6rpx 4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 品质边框颜色 */
.reward-item.orange { border-color: #ff8c00; box-shadow: 0 0 8rpx rgba(255,140,0,0.5); }
.reward-item.purple { border-color: #9932cc; box-shadow: 0 0 6rpx rgba(153,50,204,0.4); }
.reward-item.blue { border-color: #4169e1; }
.reward-item.green { border-color: #32cd32; }
.reward-item.white { border-color: #808080; }

/* 图标容器 */
.item-icon-wrap {
  width: 50rpx;
  height: 50rpx;
  background: rgba(0,0,0,0.4);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.item-icon-wrap.orange { background: linear-gradient(180deg, #4a3000 0%, #2a1a00 100%); }
.item-icon-wrap.purple { background: linear-gradient(180deg, #2a1a4a 0%, #1a0a3a 100%); }
.item-icon-wrap.blue { background: linear-gradient(180deg, #1a2a5a 0%, #0a1a4a 100%); }
.item-icon-wrap.green { background: linear-gradient(180deg, #1a3a2a 0%, #0a2a1a 100%); }

.item-icon {
  font-size: 28rpx;
}

/* 物品名字 - 更清晰 */
.item-name {
  font-size: 12rpx;
  text-align: center;
  max-width: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #aaa;
}

.item-name.orange { color: #ff8c00; }
.item-name.purple { color: #9932cc; }
.item-name.blue { color: #4169e1; }
.item-name.green { color: #32cd32; }
.item-name.white { color: #ccc; }

/* 秘境描述 */
.realm-description {
  background: rgba(0,0,0,0.4);
  border: 1rpx solid #3a5a8a;
  border-radius: 6rpx;
  padding: 8rpx;
}

.realm-name {
  font-size: 16rpx;
  color: #ffd700;
  font-weight: bold;
}

.realm-desc {
  display: block;
  font-size: 12rpx;
  color: #90ee90;
  margin-top: 4rpx;
  line-height: 1.3;
}

/* 探险按钮 - 缩小 */
.explore-buttons {
  display: flex;
  gap: 8rpx;
  justify-content: center;
}

.explore-btn {
  padding: 6rpx 12rpx;
  background: linear-gradient(180deg, #4a3a28 0%, #3a2a18 100%);
  border: 1rpx solid #8b6914;
  border-radius: 6rpx;
  text-align: center;
  min-width: 80rpx;
}

.btn-title {
  font-size: 14rpx;
  color: #ffd700;
  display: block;
}

.btn-cost {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 3rpx;
  margin-top: 2rpx;
}

.cost-icon {
  font-size: 12rpx;
}

.cost-value {
  font-size: 12rpx;
  color: #ffd700;
}

/* 底部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0,0.4);
  border: 1rpx solid #3a5a8a;
  border-radius: 4rpx;
}

.status-item {
  display: flex;
  gap: 4rpx;
  font-size: 12rpx;
}

.status-label { color: #a89070; }
.status-value { color: #f0e6d2; }
.status-value.gold { color: #ffd700; }

/* ==================== 右侧面板 ==================== */
.right-panel {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 160rpx;
}

.records-section, .announcement-section {
  flex: 1;
  background: rgba(0,0,0,0.4);
  border: 1rpx solid #3a5a8a;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.section-header {
  padding: 5rpx 8rpx;
  background: linear-gradient(180deg, #2a3a5a 0%, #1a2a4a 100%);
  border-bottom: 1rpx solid #3a5a8a;
  font-size: 12rpx;
  color: #ffd700;
  flex-shrink: 0;
}

.records-list, .announcement-list {
  flex: 1;
  padding: 4rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  padding: 3rpx 6rpx;
  margin-bottom: 3rpx;
  font-size: 11rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 3rpx;
}

.record-item.orange .record-name { color: #ff8c00; }
.record-item.purple .record-name { color: #9932cc; }
.record-item.blue .record-name { color: #4169e1; }
.record-item.green .record-name { color: #32cd32; }

.record-count { color: #aaa; }

.announcement-item {
  font-size: 11rpx;
  padding: 3rpx 6rpx;
  color: #aaa;
}

.announcement-item .orange { color: #ff8c00; }
.announcement-item .purple { color: #9932cc; }
.announcement-item .blue { color: #4169e1; }

.empty-records {
  text-align: center;
  padding: 12rpx;
  font-size: 11rpx;
  color: #666;
}

/* ==================== 结果弹窗 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.result-modal {
  width: 60%;
  max-height: 65%;
  background: linear-gradient(180deg, #1a2a4a 0%, #0a1a3a 100%);
  border: 2rpx solid #3a5a8a;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.result-header {
  padding: 10rpx;
  text-align: center;
  font-size: 20rpx;
  color: #ffd700;
  border-bottom: 1rpx solid #3a5a8a;
  flex-shrink: 0;
}

.result-list {
  flex: 1;
  padding: 8rpx;
  max-height: 200rpx;
}

.result-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 8rpx;
  margin-bottom: 5rpx;
  background: rgba(0,0,0,0.3);
  border: 1rpx solid #3a5a8a;
  border-radius: 4rpx;
}

.result-item.orange { border-color: #ff8c00; }
.result-item.purple { border-color: #9932cc; }
.result-item.blue { border-color: #4169e1; }
.result-item.green { border-color: #32cd32; }

.result-icon { font-size: 20rpx; }
.result-name { flex: 1; font-size: 14rpx; }
.result-name.orange { color: #ff8c00; }
.result-name.purple { color: #9932cc; }
.result-name.blue { color: #4169e1; }
.result-name.green { color: #32cd32; }
.result-count { font-size: 12rpx; color: #aaa; }

.result-footer {
  padding: 10rpx;
  border-top: 1rpx solid #3a5a8a;
  flex-shrink: 0;
}

.confirm-btn {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 16rpx;
  background: linear-gradient(180deg, #8b6914 0%, #6b4914 100%);
  color: #ffd700;
  border: none;
  border-radius: 22rpx;
}
