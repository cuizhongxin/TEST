/* pages/warehouse/warehouse.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.tab-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 8rpx;
  color: #fff;
  font-size: 26rpx;
  border: 2rpx solid transparent;
}

.tab-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
  color: #ffd700;
}

.item-section {
  margin-bottom: 20rpx;
}

.item-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.item-card {
  width: calc(25% - 12rpx);
  padding: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  text-align: center;
  position: relative;
}

.item-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.item-name {
  font-size: 22rpx;
  display: block;
}

.item-count {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 18rpx;
  color: #7fff00;
  background: rgba(0,0,0,0.5);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.empty-tip {
  text-align: center;
  color: #888;
  padding: 60rpx;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  width: 70%;
  background: #4a3728;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 2rpx solid #8b6914;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  display: block;
  margin-bottom: 16rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #ccc;
  display: block;
  margin-bottom: 16rpx;
  text-align: center;
}

.item-attrs {
  margin-bottom: 20rpx;
  text-align: center;
}

.item-attrs text {
  display: block;
  font-size: 22rpx;
  color: #7fff00;
  margin-bottom: 4rpx;
}

.modal-btns {
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 8rpx;
  color: #ffd700;
  font-size: 26rpx;
}

.modal-btn.sell {
  background: linear-gradient(180deg, #ff6b6b 0%, #cc5555 100%);
  color: #fff;
}

.modal-btn.close {
  background: rgba(0,0,0,0.3);
  color: #aaa;
}
