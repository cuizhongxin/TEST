/* pages/warehouse/warehouse.wxss */
page {
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
  height: 100vh;
  overflow: hidden;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  color: #e8d5b0;
  font-family: 'STKaiti', 'KaiTi', serif;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  align-items: center;
  padding: 8rpx 15rpx;
  background: linear-gradient(180deg, #2a1a0f 0%, #3d2817 100%);
  border-bottom: 2rpx solid #8b6914;
  flex-shrink: 0;
}

.back-btn {
  padding: 5rpx 12rpx;
  background: linear-gradient(180deg, #4a3a28 0%, #3a2a18 100%);
  border: 1rpx solid #5a4a3a;
  border-radius: 4rpx;
  font-size: 14rpx;
  color: #c9a227;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 18rpx;
  color: #ffd700;
}

.resource-info {
  display: flex;
  gap: 12rpx;
  font-size: 14rpx;
}

.gold { color: #ffd700; }
.silver { color: #c0c0c0; }

/* 主内容 */
.main-content {
  flex: 1;
  display: flex;
  padding: 8rpx;
  gap: 8rpx;
  overflow: hidden;
}

/* 左侧面板 */
.left-panel {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tab-list {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 4rpx;
  background: rgba(0,0,0,0.4);
  border: 1rpx solid #3a5a8a;
  border-radius: 6rpx;
}

.tab-item.active {
  background: rgba(255,215,0,0.15);
  border-color: #ffd700;
}

.tab-icon { font-size: 20rpx; }
.tab-name { font-size: 10rpx; color: #aaa; }
.tab-item.active .tab-name { color: #ffd700; }

/* 容量信息 */
.capacity-info {
  background: rgba(0,0,0,0.4);
  border: 1rpx solid #3a5a8a;
  border-radius: 6rpx;
  padding: 6rpx;
}

.capacity-label {
  font-size: 10rpx;
  color: #888;
  display: block;
  margin-bottom: 4rpx;
}

.capacity-bar {
  height: 8rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 4rpx;
}

.capacity-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50 0%, #8bc34a 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.capacity-text {
  font-size: 10rpx;
  color: #ffd700;
  text-align: center;
  display: block;
}

/* 操作按钮 */
.action-list {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.action-btn {
  padding: 6rpx;
  background: linear-gradient(180deg, #4a3a28 0%, #3a2a18 100%);
  border: 1rpx solid #8b6914;
  border-radius: 4rpx;
  font-size: 10rpx;
  color: #c9a227;
  text-align: center;
}

.action-btn.expand {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-btn .cost {
  font-size: 9rpx;
  color: #ffd700;
}

.action-btn.active {
  background: rgba(255,107,53,0.3);
  border-color: #ff6b35;
  color: #ff6b35;
}

.action-btn.sell {
  background: linear-gradient(180deg, #dc143c 0%, #8b0000 100%);
  border-color: #ff4444;
  color: #fff;
}

.action-btn.disabled {
  background: #333;
  border-color: #555;
  color: #666;
}

/* 筛选列表 */
.filter-list {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-top: auto;
}

.filter-item {
  padding: 5rpx;
  background: rgba(0,0,0,0.3);
  border: 1rpx solid #3a5a8a;
  border-radius: 4rpx;
  font-size: 10rpx;
  color: #888;
  text-align: center;
}

.filter-item.active {
  border-color: #ffd700;
  color: #ffd700;
  background: rgba(255,215,0,0.1);
}

/* 网格面板 */
.grid-panel {
  flex: 1;
  background: rgba(0,0,0,0.3);
  border: 2rpx solid #5a4a3a;
  border-radius: 8rpx;
  overflow: hidden;
}

.grid-scroll {
  height: 100%;
  padding: 6rpx;
}

/* 存储网格 */
.storage-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
}

/* 单个格子 */
.grid-slot {
  width: 58rpx;
  height: 72rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slot-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 58rpx;
  height: 58rpx;
  background: linear-gradient(135deg, #2a2a3e 0%, #1a1a2e 100%);
  border: 2rpx solid #4a4a6a;
  border-radius: 6rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.5), 0 1rpx 2rpx rgba(255,255,255,0.1);
}

.slot-content {
  position: relative;
  width: 58rpx;
  height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.slot-icon {
  font-size: 26rpx;
}

.slot-name {
  font-size: 8rpx;
  color: #aaa;
  max-width: 58rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  margin-top: 2rpx;
}

.slot-level {
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  font-size: 9rpx;
  color: #4caf50;
  background: rgba(0,0,0,0.7);
  padding: 1rpx 3rpx;
  border-radius: 2rpx;
  z-index: 2;
}

.slot-count {
  position: absolute;
  bottom: 2rpx;
  right: 2rpx;
  font-size: 10rpx;
  color: #ffd700;
  background: rgba(0,0,0,0.7);
  padding: 1rpx 4rpx;
  border-radius: 2rpx;
  z-index: 2;
}

.select-mark {
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  width: 16rpx;
  height: 16rpx;
  line-height: 16rpx;
  text-align: center;
  font-size: 10rpx;
  color: #fff;
  background: #4caf50;
  border-radius: 50%;
  z-index: 2;
}

/* 品质颜色 */
.grid-slot.orange .slot-bg {
  border-color: #ff8c00;
  box-shadow: inset 0 0 15rpx rgba(255,140,0,0.4), 0 0 8rpx rgba(255,140,0,0.3);
  background: linear-gradient(135deg, #4a3a1e 0%, #2a2010 100%);
}

.grid-slot.purple .slot-bg {
  border-color: #9932cc;
  box-shadow: inset 0 0 12rpx rgba(153,50,204,0.3), 0 0 6rpx rgba(153,50,204,0.2);
  background: linear-gradient(135deg, #3a2a4e 0%, #2a1a3e 100%);
}

.grid-slot.red .slot-bg {
  border-color: #dc143c;
  box-shadow: inset 0 0 10rpx rgba(220,20,60,0.3);
  background: linear-gradient(135deg, #3a1a1e 0%, #2a1010 100%);
}

.grid-slot.blue .slot-bg {
  border-color: #4169e1;
  box-shadow: inset 0 0 8rpx rgba(65,105,225,0.3);
  background: linear-gradient(135deg, #1a2a4e 0%, #101a3e 100%);
}

.grid-slot.green .slot-bg {
  border-color: #32cd32;
  background: linear-gradient(135deg, #1a3a2e 0%, #102a1e 100%);
}

.grid-slot.selected .slot-bg {
  border-color: #ff6b35 !important;
  box-shadow: 0 0 10rpx rgba(255,107,53,0.5) !important;
}

/* 空格子 */
.grid-slot.empty .slot-bg {
  border-style: dashed;
  border-color: #3a3a4a;
  background: rgba(0,0,0,0.2);
}

.empty-icon {
  font-size: 20rpx;
  color: #3a3a4a;
}

/* 详情面板 */
.detail-panel {
  width: 160rpx;
  background: rgba(0,0,0,0.5);
  border: 2rpx solid #5a4a3a;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx;
  background: rgba(0,0,0,0.3);
  border-bottom: 1rpx solid #3a3a4a;
}

.detail-icon-wrap {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #2a2a3e 0%, #1a1a2e 100%);
  border: 2rpx solid #4a4a6a;
  border-radius: 6rpx;
}

.detail-icon-wrap.orange { border-color: #ff8c00; }
.detail-icon-wrap.purple { border-color: #9932cc; }
.detail-icon-wrap.red { border-color: #dc143c; }
.detail-icon-wrap.blue { border-color: #4169e1; }
.detail-icon-wrap.green { border-color: #32cd32; }

.detail-icon { font-size: 22rpx; }

.detail-title {
  flex: 1;
  overflow: hidden;
}

.detail-name {
  font-size: 12rpx;
  color: #ffd700;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail-quality {
  font-size: 9rpx;
  color: #888;
}

.close-btn {
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  background: rgba(255,0,0,0.3);
  border-radius: 50%;
  font-size: 10rpx;
  color: #fff;
}

.detail-body {
  flex: 1;
  padding: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  overflow-y: auto;
}

.attr-section {
  background: rgba(0,0,0,0.3);
  border-radius: 4rpx;
  padding: 6rpx;
}

.attr-title {
  font-size: 10rpx;
  color: #888;
  margin-bottom: 4rpx;
}

.attr-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
}

.attr-item {
  background: rgba(144,238,144,0.1);
  border-radius: 3rpx;
  padding: 3rpx 6rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.attr-label {
  font-size: 10rpx;
  color: #90ee90;
}

.attr-value {
  font-size: 10rpx;
  color: #4caf50;
}

.count-section {
  font-size: 11rpx;
  color: #ffd700;
  padding: 4rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 4rpx;
}

.desc-section {
  font-size: 10rpx;
  color: #888;
  line-height: 1.4;
  flex: 1;
}

.btn-section {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-top: auto;
}

.detail-btn {
  padding: 8rpx;
  text-align: center;
  border-radius: 4rpx;
  font-size: 11rpx;
}

.detail-btn.equip {
  background: linear-gradient(180deg, #4caf50 0%, #2e7d32 100%);
  color: #fff;
}

.detail-btn.use {
  background: linear-gradient(180deg, #2196f3 0%, #1565c0 100%);
  color: #fff;
}

.detail-btn.sell {
  background: linear-gradient(180deg, #ff9800 0%, #e65100 100%);
  color: #fff;
}

.detail-btn.discard {
  background: linear-gradient(180deg, #757575 0%, #424242 100%);
  color: #fff;
}

/* 提示面板 */
.hint-panel {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.3);
  border: 2rpx dashed #3a3a4a;
  border-radius: 8rpx;
}

.hint-icon {
  font-size: 32rpx;
  opacity: 0.5;
}

.hint-text {
  font-size: 11rpx;
  color: #666;
  margin-top: 8rpx;
}
