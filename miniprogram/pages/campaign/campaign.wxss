.container {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.3);
  flex-shrink: 0;
}

.back-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #ffd700;
}

.title {
  font-size: 32rpx;
  color: #ffd700;
  font-weight: bold;
}

.placeholder {
  width: 50rpx;
}

/* 战役列表（横向滚动） */
.campaign-list {
  flex: 1;
  padding: 16rpx;
  overflow: hidden;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #888;
}

.campaign-grid {
  display: flex;
  gap: 20rpx;
  height: 100%;
}

/* 战役卡片（横屏适配） */
.campaign-card {
  position: relative;
  width: 280rpx;
  height: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.4);
  flex-shrink: 0;
}

.campaign-card.locked {
  opacity: 0.6;
}

.campaign-banner {
  position: relative;
  width: 100%;
  height: 100%;
}

.campaign-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.campaign-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.7) 100%);
}

.campaign-info {
  position: absolute;
  left: 12rpx;
  bottom: 12rpx;
  right: 12rpx;
}

.campaign-name {
  font-size: 28rpx;
  color: #ffd700;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.8);
  display: block;
}

.daily-limit {
  margin-top: 6rpx;
  padding: 3rpx 10rpx;
  background: rgba(0, 128, 0, 0.8);
  border-radius: 6rpx;
  display: inline-block;
}

.daily-limit text {
  font-size: 20rpx;
  color: #fff;
}

/* 锁定遮罩 */
.lock-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.lock-icon {
  font-size: 50rpx;
}

.lock-text {
  font-size: 24rpx;
  color: #fff;
  margin-top: 8rpx;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.status-tag.progress {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: #fff;
}

.status-tag.paused {
  background: linear-gradient(135deg, #f39c12, #e67e22);
  color: #fff;
}

.sweep-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
  border-radius: 6rpx;
}

.sweep-tag text {
  font-size: 20rpx;
  color: #fff;
}

/* 详情弹窗（横屏适配） */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.detail-content {
  width: 70%;
  max-width: 600rpx;
  max-height: 90vh;
  background: linear-gradient(180deg, #2c3e50 0%, #1a252f 100%);
  border-radius: 16rpx;
  border: 2rpx solid #ffd700;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: linear-gradient(90deg, #8b4513, #a0522d);
  border-bottom: 2rpx solid #ffd700;
  flex-shrink: 0;
}

.detail-title {
  font-size: 32rpx;
  color: #ffd700;
  font-weight: bold;
}

.close-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #fff;
}

.detail-body {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(255, 215, 0, 0.2);
}

.info-label {
  font-size: 26rpx;
  color: #aaa;
}

.info-value {
  font-size: 26rpx;
  color: #fff;
}

.info-value.highlight {
  color: #ffd700;
  font-weight: bold;
}

/* 掉落预览 */
.drop-section {
  margin-top: 20rpx;
}

.drop-title {
  font-size: 26rpx;
  color: #ffd700;
  margin-bottom: 12rpx;
  display: block;
}

.drop-list {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.drop-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
  border: 2rpx solid #555;
}

.drop-item.quality-excellent { border-color: #2ecc71; }
.drop-item.quality-rare { border-color: #3498db; }
.drop-item.quality-epic { border-color: #9b59b6; }
.drop-item.quality-legendary { border-color: #f39c12; }

.drop-icon {
  width: 60rpx;
  height: 60rpx;
}

.drop-name {
  font-size: 20rpx;
  color: #fff;
  margin-top: 6rpx;
}

/* 底部按钮 */
.detail-footer {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(0, 0, 0, 0.3);
  flex-shrink: 0;
}

.btn {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: #fff;
}

.btn-sweep {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
  color: #fff;
}

.btn-disabled {
  background: #555;
  color: #888;
}
