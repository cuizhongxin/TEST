  cursor: pointer;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  min-width: 80rpx;
  z-index: 10;
  border: 2rpx solid rgba(255,255,255,0.3);
}

.city-node:active {
  transform: translate(-50%, -50%) scale(1.1);
}

