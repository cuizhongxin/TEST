/* pages/tactics/tactics.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 16rpx;
  display: block;
}

.general-section {
  margin-bottom: 30rpx;
}

.general-list {
  white-space: nowrap;
}

.general-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  margin-right: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.general-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
}

.general-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid #8b6914;
}

.general-avatar image {
  width: 100%;
  height: 100%;
}

.general-name {
  font-size: 24rpx;
  color: #fff;
  margin-top: 8rpx;
}

.tactics-section {
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.current-tactics {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.current-tactics.empty {
  color: #888;
}

.tactics-name {
  font-size: 30rpx;
  color: #ffd700;
  font-weight: bold;
}

.tactics-type {
  font-size: 22rpx;
  color: #7fff00;
  padding: 4rpx 12rpx;
  background: rgba(127,255,0,0.2);
  border-radius: 4rpx;
}

.learn-section {
  margin-bottom: 30rpx;
}

.tactics-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tactics-card {
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 6rpx solid #888;
}

.tactics-card.green { border-left-color: #32cd32; }
.tactics-card.blue { border-left-color: #4169e1; }
.tactics-card.purple { border-left-color: #9932cc; }
.tactics-card.orange { border-left-color: #ff8c00; }

.tactics-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.tactics-type-tag {
  font-size: 20rpx;
  color: #aaa;
  padding: 2rpx 8rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 4rpx;
}

.tactics-desc {
  font-size: 24rpx;
  color: #ccc;
  display: block;
  margin-bottom: 12rpx;
}

.tactics-cost {
  font-size: 22rpx;
  color: #ff6b6b;
  margin-bottom: 12rpx;
}

.tactics-btn {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 6rpx;
  color: #ffd700;
  font-size: 24rpx;
}
