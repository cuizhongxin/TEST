/* pages/recharge/recharge.wxss */
page {
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.page-container {
  width: 100%;
  height: 100%;
  padding: 16rpx;
  padding-bottom: 90rpx;
  box-sizing: border-box;
  color: #e8d5b0;
  font-family: 'STKaiti', 'KaiTi', serif;
  overflow-y: auto;
}

/* 用户信息头部 */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: linear-gradient(180deg, #2a1a0f 0%, #3d2817 100%);
  border-radius: 12rpx;
  border: 2rpx solid #8b6914;
  margin-bottom: 12rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #ffd700;
}

.user-detail {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.nickname {
  font-size: 24rpx;
  color: #ffd700;
  font-weight: bold;
}

.vip-level {
  font-size: 18rpx;
  color: #ff6b6b;
  padding: 2rpx 8rpx;
  background: rgba(255,107,107,0.2);
  border-radius: 6rpx;
  display: inline-block;
}

.balance-info {
  display: flex;
  gap: 16rpx;
}

.balance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
}

.balance-label {
  font-size: 18rpx;
  color: #888;
}

.balance-value {
  font-size: 22rpx;
  font-weight: bold;
}

.balance-value.gold {
  color: #ffd700;
}

.balance-value.diamond {
  color: #00bfff;
}

/* 区块标题 */
.section-title {
  font-size: 22rpx;
  color: #ffd700;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
  border-left: 3rpx solid #ffd700;
}

/* 商品列表 */
.products-section {
  margin-bottom: 16rpx;
}

.products-grid {
  display: flex;
  gap: 12rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.products-grid::-webkit-scrollbar {
  display: none;
}

.product-card {
  position: relative;
  padding: 12rpx 10rpx;
  min-width: 140rpx;
  background: linear-gradient(180deg, #2a2a3e 0%, #1a1a2e 100%);
  border: 2rpx solid #3a3a5a;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.product-card.selected {
  border-color: #ffd700;
  background: linear-gradient(180deg, #3a3a4e 0%, #2a2a3e 100%);
  box-shadow: 0 0 12rpx rgba(255,215,0,0.3);
}

.product-card.hot {
  border-color: #ff6b6b;
}

.hot-tag {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 14rpx;
  color: #fff;
  background: linear-gradient(135deg, #ff6b6b, #ff4444);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.product-icon {
  font-size: 36rpx;
}

.product-name {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.product-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
}

.gold-amount {
  font-size: 16rpx;
  color: #ffd700;
}

.diamond-amount {
  font-size: 14rpx;
  color: #00bfff;
}

.product-price {
  font-size: 22rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.first-double {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 12rpx;
  color: #fff;
  background: linear-gradient(90deg, #ff6b6b, #ffd700);
  padding: 2rpx 0;
  text-align: center;
  border-radius: 0 0 8rpx 8rpx;
}

/* 支付方式 */
.payment-section {
  margin-bottom: 16rpx;
}

.payment-methods {
  display: flex;
  flex-direction: row;
  gap: 12rpx;
}

.payment-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 8rpx;
  background: rgba(0,0,0,0.3);
  border: 2rpx solid #3a3a5a;
  border-radius: 10rpx;
  gap: 6rpx;
  position: relative;
}

.payment-item.selected {
  border-color: #4caf50;
  background: rgba(76,175,80,0.1);
}

.payment-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.payment-icon.wechat {
  background: #07c160;
}

.payment-icon.alipay {
  background: #1677ff;
}

.payment-icon.unionpay {
  background: #e21e1e;
}

.payment-name {
  font-size: 20rpx;
  color: #fff;
}

.check-mark {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 28rpx;
  height: 28rpx;
  background: #4caf50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 18rpx;
}

/* 充值说明 */
.notice-section {
  margin-bottom: 12rpx;
}

.notice-content {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx 16rpx;
  padding: 10rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 8rpx;
  font-size: 18rpx;
  color: #888;
}

.notice-content text {
  white-space: nowrap;
}

/* 底部支付栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background: linear-gradient(180deg, #2a1a0f 0%, #1a0a00 100%);
  border-top: 2rpx solid #8b6914;
  height: 80rpx;
  box-sizing: border-box;
}

.order-summary {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.summary-label {
  font-size: 22rpx;
  color: #888;
}

.summary-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.pay-btn {
  padding: 12rpx 40rpx;
  background: linear-gradient(180deg, #ffd700 0%, #ff8c00 100%);
  border: none;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #3d2817;
  font-weight: bold;
  line-height: 1.2;
  min-height: auto;
  height: auto;
}

.pay-btn.disabled {
  background: #555;
  color: #888;
}

/* 充值记录入口 */
.history-entry {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 8rpx;
  margin-top: 12rpx;
  font-size: 20rpx;
  color: #888;
}

.arrow {
  font-size: 26rpx;
}
