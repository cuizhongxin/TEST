/* pages/chat/chat.wxss */
page {
  background: linear-gradient(180deg, #1a0a0a 0%, #2d1515 100%);
  height: 100vh;
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.message-list {
  flex: 1;
  padding: 20rpx;
}

.message-item {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: rgba(139, 69, 19, 0.3);
  border-radius: 10rpx;
  border: 1rpx solid #654321;
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.message-user {
  font-size: 24rpx;
  color: #ffd700;
  font-weight: bold;
}

.message-time {
  font-size: 20rpx;
  color: #888;
}

.message-content {
  font-size: 26rpx;
  color: #e8d5b0;
}

.input-area {
  display: flex;
  padding: 16rpx;
  background: rgba(0,0,0,0.5);
  border-top: 1rpx solid #654321;
}

.message-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 30rpx;
  color: #e8d5b0;
  font-size: 26rpx;
}

.send-btn {
  margin-left: 16rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  background: linear-gradient(180deg, #228b22, #006400);
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
  border: none;
}
