/* pages/login/login.wxss */
page {
  background: linear-gradient(180deg, #1a0a0a 0%, #2d1515 50%, #1a0a0a 100%);
  height: 100vh;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(139, 69, 19, 0.5);
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #ffd700;
  margin-top: 40rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
  font-family: 'STKaiti', 'KaiTi', serif;
}

.subtitle {
  font-size: 28rpx;
  color: #e8d5b0;
  margin-top: 16rpx;
}

.login-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: rgba(139, 69, 19, 0.3);
  padding: 24rpx 40rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(212, 160, 86, 0.3);
}

.feature-icon {
  font-size: 48rpx;
}

.feature-text {
  font-size: 32rpx;
  color: #e8d5b0;
}

.login-footer {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(180deg, #228b22 0%, #006400 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 100, 0, 0.4);
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
}

.agreement {
  display: flex;
  align-items: center;
  margin-top: 32rpx;
  font-size: 24rpx;
  color: #888;
}

.agreement .link {
  color: #ffd700;
}
