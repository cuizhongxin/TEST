/* pages/login/login.wxss */
page {
  background: linear-gradient(180deg, #1a0a0a 0%, #2d1515 50%, #1a0a0a 100%);
  height: 100vh;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 登录面板 */
.login-panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(139, 69, 19, 0.5);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffd700;
  margin-top: 30rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
  font-family: 'STKaiti', 'KaiTi', serif;
}

.subtitle {
  font-size: 26rpx;
  color: #e8d5b0;
  margin-top: 12rpx;
}

.login-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-list {
  display: flex;
  flex-direction: row;
  gap: 30rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  background: rgba(139, 69, 19, 0.3);
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(212, 160, 86, 0.3);
}

.feature-icon {
  font-size: 40rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #e8d5b0;
}

.login-footer {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 400rpx;
  height: 80rpx;
  background: linear-gradient(180deg, #228b22 0%, #006400 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 100, 0, 0.4);
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
}

.agreement {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 20rpx;
  color: #888;
}

.agreement .link {
  color: #ffd700;
}

/* ========== 国家选择面板 ========== */
.nation-select-panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
}

.nation-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.nation-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
}

.nation-subtitle {
  font-size: 24rpx;
  color: #a89070;
  margin-top: 10rpx;
  text-align: center;
}

.nation-list {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx 0;
}

.nation-card {
  width: 320rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 16rpx;
  border: 3rpx solid #8b4513;
  overflow: hidden;
  position: relative;
  transition: all 0.3s ease;
}

.nation-card.selected {
  transform: scale(1.02);
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.5);
}

.nation-banner {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nation-flag {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.nation-info {
  padding: 15rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.nation-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffd700;
}

.nation-capital, .nation-cities {
  font-size: 22rpx;
  color: #a89070;
}

.nation-desc {
  margin-top: 8rpx;
  padding-top: 8rpx;
  border-top: 1rpx solid rgba(139, 69, 19, 0.3);
}

.nation-desc text {
  font-size: 20rpx;
  color: #d4a574;
  font-style: italic;
}

.select-mark {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ffd700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-weight: bold;
  font-size: 24rpx;
}

.nation-footer {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.confirm-btn {
  width: 400rpx;
  height: 80rpx;
  background: linear-gradient(180deg, #8b4513 0%, #5d2e0c 100%);
  color: #ffd700;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  border: 2rpx solid #d4a574;
  box-shadow: 0 8rpx 20rpx rgba(139, 69, 19, 0.4);
}

.confirm-btn[disabled] {
  background: #666;
  color: #999;
  border-color: #666;
}

.nation-tip {
  margin-top: 15rpx;
}

.nation-tip text {
  font-size: 20rpx;
  color: #888;
}
