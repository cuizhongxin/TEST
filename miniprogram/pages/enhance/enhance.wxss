/* pages/enhance/enhance.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 16rpx;
  display: block;
}

.general-section {
  margin-bottom: 30rpx;
}

.general-list {
  white-space: nowrap;
}

.general-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  margin-right: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.general-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
}

.general-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid #8b6914;
}

.general-avatar image {
  width: 100%;
  height: 100%;
}

.general-name {
  font-size: 24rpx;
  color: #fff;
  margin-top: 8rpx;
}

.equip-section {
  margin-bottom: 30rpx;
}

.equip-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.equip-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.equip-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
}

.equip-name {
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
}

.equip-level {
  font-size: 28rpx;
  color: #7fff00;
  font-weight: bold;
}

.equip-attr {
  font-size: 22rpx;
  color: #aaa;
}

.empty-tip {
  text-align: center;
  color: #888;
  padding: 40rpx;
}

.enhance-info {
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-card {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #aaa;
}

.info-value {
  font-size: 26rpx;
  color: #fff;
}

.info-value.highlight {
  color: #7fff00;
  font-weight: bold;
}

.info-value.cost {
  color: #ff6b6b;
}

.enhance-btn {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 12rpx;
  color: #ffd700;
  font-size: 30rpx;
  font-weight: bold;
}

.resource-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: rgba(0,0,0,0.8);
  color: #ffd700;
  font-size: 26rpx;
}
