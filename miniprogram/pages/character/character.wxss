/* pages/character/character.wxss */
page {
  background: linear-gradient(135deg, #1a0a0a 0%, #2d1515 50%, #1a0a0a 100%);
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  color: #e8d5b0;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  background: linear-gradient(180deg, rgba(139, 69, 19, 0.9) 0%, rgba(101, 67, 33, 0.85) 100%);
  border-bottom: 2rpx solid #d4a056;
}

.back-btn {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 8rpx;
}

.page-title {
  font-size: 26rpx;
  color: #ffd700;
  font-weight: bold;
}

.count {
  font-size: 18rpx;
  color: #aaa;
}

.main-content {
  flex: 1;
  display: flex;
  padding: 15rpx;
  gap: 15rpx;
  overflow: hidden;
}

.general-list {
  width: 280rpx;
  background: rgba(0,0,0,0.4);
  border: 2rpx solid #8b4513;
  border-radius: 10rpx;
  padding: 10rpx;
}

.general-card {
  display: flex;
  align-items: center;
  padding: 12rpx;
  margin-bottom: 10rpx;
  background: rgba(139, 69, 19, 0.3);
  border: 1rpx solid #654321;
  border-radius: 8rpx;
}

.general-card.selected {
  border-color: #ffd700;
  background: rgba(218, 165, 32, 0.3);
}

.card-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 2rpx solid;
  overflow: hidden;
  margin-right: 10rpx;
}

.card-avatar image {
  width: 100%;
  height: 100%;
}

.card-info {
  flex: 1;
}

.card-name {
  font-size: 20rpx;
  font-weight: bold;
  display: block;
}

.card-quality {
  font-size: 16rpx;
  color: #aaa;
}

.card-power {
  font-size: 18rpx;
  color: #ff6b6b;
}

.detail-panel {
  flex: 1;
  background: rgba(0,0,0,0.4);
  border: 2rpx solid #8b4513;
  border-radius: 10rpx;
  padding: 20rpx;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #654321;
}

.detail-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid;
  overflow: hidden;
}

.detail-avatar image {
  width: 100%;
  height: 100%;
}

.detail-title {
  flex: 1;
}

.detail-name {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
}

.detail-type {
  font-size: 18rpx;
  color: #aaa;
}

.attributes {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.attr-item {
  width: calc(50% - 10rpx);
  display: flex;
  justify-content: space-between;
  padding: 10rpx 15rpx;
  background: rgba(139, 69, 19, 0.3);
  border-radius: 6rpx;
}

.attr-label {
  font-size: 18rpx;
  color: #aaa;
}

.attr-value {
  font-size: 18rpx;
  color: #ffd700;
}

.total-power {
  margin-top: 20rpx;
  text-align: center;
  font-size: 22rpx;
}

.power-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}
