/* pages/character/character.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 16rpx;
  display: block;
}

.info-section {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.avatar-area {
  position: relative;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  border: 4rpx solid #ffd700;
}

.level {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #8b0000;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 10rpx;
}

.info-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.quality {
  font-size: 24rpx;
  color: #aaa;
  margin-bottom: 12rpx;
}

.exp-bar {
  height: 16rpx;
  background: #2d2d2d;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 4rpx;
}

.exp-fill {
  height: 100%;
  background: linear-gradient(90deg, #228b22 0%, #32cd32 100%);
}

.exp-text {
  font-size: 20rpx;
  color: #aaa;
}

.attr-section {
  padding: 20rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.attr-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.attr-item {
  width: calc(33.33% - 12rpx);
  display: flex;
  justify-content: space-between;
  padding: 12rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 8rpx;
}

.attr-label {
  font-size: 24rpx;
  color: #aaa;
}

.attr-value {
  font-size: 24rpx;
  color: #7fff00;
  font-weight: bold;
}

.tactics-section {
  padding: 20rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.tactics-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tactics-name {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.tactics-type {
  font-size: 22rpx;
  color: #7fff00;
  padding: 4rpx 12rpx;
  background: rgba(127,255,0,0.2);
  border-radius: 4rpx;
}

.tactics-empty {
  color: #888;
  font-size: 24rpx;
}

.equip-section {
  padding: 20rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
}

.equip-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.equip-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 8rpx;
}

.equip-label {
  font-size: 24rpx;
  color: #aaa;
}

.equip-name {
  font-size: 24rpx;
  font-weight: bold;
}

.equip-empty {
  font-size: 24rpx;
  color: #666;
}

.loading {
  text-align: center;
  color: #aaa;
  padding: 100rpx;
}
