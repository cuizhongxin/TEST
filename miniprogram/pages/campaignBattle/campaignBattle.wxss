.container {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(180deg, #1a0a00 0%, #2d1408 50%, #1a0a00 100%);
  overflow: hidden;
}

/* ==================== 加载界面 ==================== */
.loading-screen {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 32rpx;
  color: #ffd700;
}

/* ==================== 准备界面（横屏布局） ==================== */
.prepare-screen {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
  box-sizing: border-box;
}

.prepare-left, .prepare-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.campaign-info-card {
  background: linear-gradient(135deg, rgba(139, 69, 19, 0.6), rgba(160, 82, 45, 0.4));
  border: 2rpx solid #8b4513;
  border-radius: 12rpx;
  padding: 16rpx;
}

.campaign-name {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
  display: block;
}

.campaign-stage {
  font-size: 24rpx;
  color: #e74c3c;
  display: block;
  margin-top: 8rpx;
}

.campaign-desc {
  margin-top: 12rpx;
}

.campaign-desc text {
  font-size: 22rpx;
  color: #ccc;
  display: block;
  margin-top: 4rpx;
}

.team-card, .enemy-card {
  flex: 1;
  background: rgba(0, 0, 0, 0.4);
  border: 2rpx solid #5a4a3a;
  border-radius: 12rpx;
  padding: 16rpx;
}

.card-title {
  font-size: 26rpx;
  color: #ffd700;
  display: block;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #5a4a3a;
}

.team-generals {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.team-general {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  border: 1rpx solid #5a4a3a;
}

.team-general.main {
  border-color: #ffd700;
}

.team-general .general-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  border: 2rpx solid #8b4513;
}

.team-general.main .general-avatar {
  border-color: #ffd700;
}

.team-general .general-name {
  font-size: 20rpx;
  color: #fff;
  margin-top: 4rpx;
}

.team-general .general-level {
  font-size: 18rpx;
  color: #aaa;
}

.no-general {
  padding: 20rpx;
}

.no-general text {
  font-size: 24rpx;
  color: #888;
}

.enemy-detail {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.enemy-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  border: 3rpx solid #e74c3c;
}

.enemy-info {
  flex: 1;
}

.enemy-name {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: bold;
  display: block;
}

.enemy-stat {
  font-size: 22rpx;
  color: #ccc;
  display: block;
  margin-top: 4rpx;
}

.prepare-actions {
  display: flex;
  gap: 16rpx;
  margin-top: auto;
}

.btn-start {
  flex: 2;
  height: 70rpx;
  background: linear-gradient(135deg, #c0392b, #e74c3c);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(192, 57, 43, 0.4);
}

.btn-start text {
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.btn-back {
  flex: 1;
  height: 70rpx;
  background: rgba(100, 100, 100, 0.5);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-back text {
  font-size: 26rpx;
  color: #ccc;
}

/* ==================== 战斗界面（横屏布局） ==================== */
.battle-screen {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.battle-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.6));
  border-bottom: 3rpx solid #8b4513;
  flex-shrink: 0;
}

.player-side, .enemy-side {
  display: flex;
  align-items: center;
  flex: 1;
}

.enemy-side {
  justify-content: flex-end;
}

.side-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  border: 2rpx solid #3498db;
}

.side-avatar.enemy {
  border-color: #e74c3c;
}

.side-info {
  margin-left: 10rpx;
}

.side-info.right {
  margin-left: 0;
  margin-right: 10rpx;
  text-align: right;
}

.side-name {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  display: block;
}

.side-level {
  font-size: 20rpx;
  color: #aaa;
  display: block;
}

.hp-bar-container {
  width: 160rpx;
  height: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 10rpx;
  margin-left: 12rpx;
  position: relative;
  border: 1rpx solid #555;
}

.enemy-side .hp-bar-container {
  margin-left: 0;
  margin-right: 12rpx;
}

.hp-bar {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

.player-hp {
  background: linear-gradient(90deg, #27ae60, #2ecc71);
}

.enemy-hp {
  background: linear-gradient(90deg, #c0392b, #e74c3c);
}

.hp-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16rpx;
  color: #fff;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.8);
}

.battle-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 16rpx;
}

.battle-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #8b0000, #dc143c);
  border: 2rpx solid #ffd700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffd700;
  font-weight: bold;
  box-shadow: 0 0 16rpx rgba(255, 215, 0, 0.5);
}

.round-text {
  font-size: 20rpx;
  color: #ffd700;
  margin-top: 6rpx;
}

/* ==================== 战场主区域 ==================== */
.battlefield-main {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
  position: relative;
  background: linear-gradient(180deg, 
    rgba(139, 69, 19, 0.2) 0%, 
    rgba(160, 82, 45, 0.3) 30%,
    rgba(101, 67, 33, 0.4) 70%,
    rgba(139, 69, 19, 0.2) 100%
  );
  overflow: hidden;
}

/* 攻击动画 */
.attack-animation {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.attack-animation.player-attack .attack-effect {
  animation: attackRight 0.4s ease-out;
}

.attack-animation.enemy-attack .attack-effect {
  animation: attackLeft 0.4s ease-out;
}

.attack-effect {
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(255, 215, 0, 0.8) 0%, rgba(255, 100, 0, 0.4) 50%, transparent 70%);
  border-radius: 50%;
}

@keyframes attackRight {
  0% { transform: translateX(-150rpx) scale(0.5); opacity: 1; }
  100% { transform: translateX(80rpx) scale(1.5); opacity: 0; }
}

@keyframes attackLeft {
  0% { transform: translateX(150rpx) scale(0.5); opacity: 1; }
  100% { transform: translateX(-80rpx) scale(1.5); opacity: 0; }
}

/* 军队阵型 */
.army-formation {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 16rpx;
  position: relative;
  transition: transform 0.3s ease;
}

.army-formation.attacking {
  animation: shake 0.3s ease;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(8rpx); }
  75% { transform: translateX(-8rpx); }
}

.player-army {
  align-items: flex-start;
}

.enemy-army {
  align-items: flex-end;
}

.formation-row {
  display: flex;
  gap: 6rpx;
}

.player-army .formation-row {
  flex-direction: row;
}

.enemy-army .formation-row {
  flex-direction: row-reverse;
}

.soldier-unit {
  position: relative;
}

.unit-icon {
  width: 40rpx;
  height: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}

.unit-icon::before {
  content: '';
  width: 24rpx;
  height: 32rpx;
  position: absolute;
  top: 0;
  border-radius: 3rpx 3rpx 0 0;
}

/* 玩家军队颜色 */
.unit-icon.infantry::before {
  background: linear-gradient(180deg, #3498db, #2980b9);
}

.unit-icon.cavalry::before {
  background: linear-gradient(180deg, #f1c40f, #f39c12);
  border-radius: 6rpx 6rpx 0 0;
}

.unit-icon.archer::before {
  background: linear-gradient(180deg, #27ae60, #1e8449);
  clip-path: polygon(50% 0%, 100% 100%, 0% 100%);
}

/* 敌方军队颜色 */
.unit-icon.enemy-unit.infantry::before {
  background: linear-gradient(180deg, #e74c3c, #c0392b);
}

.unit-icon.enemy-unit.cavalry::before {
  background: linear-gradient(180deg, #e67e22, #d35400);
}

.unit-icon.enemy-unit.archer::before {
  background: linear-gradient(180deg, #9b59b6, #8e44ad);
}

.unit-flag {
  font-size: 14rpx;
  padding: 1rpx 4rpx;
  border-radius: 3rpx;
  position: absolute;
  bottom: -4rpx;
}

.player-flag {
  color: #3498db;
  background: rgba(0, 0, 0, 0.6);
}

.enemy-flag {
  color: #e74c3c;
  background: rgba(0, 0, 0, 0.6);
}

.general-position {
  position: absolute;
  bottom: 16rpx;
}

.player-general {
  left: 16rpx;
}

.enemy-general {
  right: 16rpx;
}

.formation-general-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #3498db;
  box-shadow: 0 0 16rpx rgba(52, 152, 219, 0.5);
}

.formation-general-avatar.enemy {
  border-color: #e74c3c;
  box-shadow: 0 0 16rpx rgba(231, 76, 60, 0.5);
}

/* VS分隔线 */
.vs-divider {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.clash-effect {
  width: 50rpx;
  height: 50rpx;
  opacity: 0;
  transition: opacity 0.3s;
}

.clash-effect.active {
  opacity: 1;
  background: radial-gradient(circle, #ffd700 0%, #ff6600 50%, transparent 70%);
  animation: clash 0.4s ease-out;
}

@keyframes clash {
  0% { transform: scale(0); opacity: 1; }
  50% { transform: scale(1.5); opacity: 0.8; }
  100% { transform: scale(2); opacity: 0; }
}

/* ==================== 战斗日志 ==================== */
.battle-log-panel {
  height: 100rpx;
  background: rgba(0, 0, 0, 0.8);
  border-top: 2rpx solid #8b4513;
  padding: 8rpx 16rpx;
  flex-shrink: 0;
}

.log-scroll {
  height: 100%;
}

.log-item {
  font-size: 20rpx;
  color: #ccc;
  padding: 4rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.log-item.player {
  color: #3498db;
}

.log-item.enemy {
  color: #e74c3c;
}

.log-item.system {
  color: #ffd700;
}

/* ==================== 底部操作栏 ==================== */
.battle-footer {
  padding: 12rpx 20rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.9));
  border-top: 2rpx solid #8b4513;
  flex-shrink: 0;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.btn-action {
  flex: 1;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-attack {
  background: linear-gradient(135deg, #c0392b, #e74c3c);
  box-shadow: 0 4rpx 12rpx rgba(192, 57, 43, 0.4);
}

.btn-retreat {
  background: linear-gradient(135deg, #7f8c8d, #95a5a6);
}

.btn-action text {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.battling-hint {
  text-align: center;
  padding: 16rpx;
}

.battling-hint text {
  font-size: 26rpx;
  color: #ffd700;
}

/* ==================== 结果弹窗 ==================== */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.result-content {
  width: 70%;
  max-width: 500rpx;
  background: linear-gradient(180deg, #2c3e50, #1a252f);
  border-radius: 16rpx;
  overflow: hidden;
}

.result-content.victory {
  border: 2rpx solid #ffd700;
}

.result-content.defeat {
  border: 2rpx solid #e74c3c;
}

.result-banner {
  padding: 24rpx;
  text-align: center;
}

.result-content.victory .result-banner {
  background: linear-gradient(135deg, #f39c12, #d68910);
}

.result-content.defeat .result-banner {
  background: linear-gradient(135deg, #c0392b, #96281b);
}

.result-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.result-body {
  padding: 24rpx;
}

.result-row {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.result-row .label {
  font-size: 26rpx;
  color: #aaa;
}

.result-row .value {
  font-size: 26rpx;
  color: #fff;
}

.result-row .value.gold {
  color: #ffd700;
  font-weight: bold;
}

.result-row .value.red {
  color: #e74c3c;
}

.drops-section {
  margin-top: 16rpx;
}

.drops-title {
  font-size: 26rpx;
  color: #ffd700;
  display: block;
  margin-bottom: 12rpx;
}

.drops-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.drop-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  border: 1rpx solid #555;
}

.drop-icon {
  width: 50rpx;
  height: 50rpx;
}

.drop-count {
  font-size: 20rpx;
  color: #fff;
  margin-top: 4rpx;
}

.result-footer {
  padding: 16rpx 24rpx 24rpx;
}

.btn-result {
  width: 100%;
  height: 70rpx;
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-result text {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}
