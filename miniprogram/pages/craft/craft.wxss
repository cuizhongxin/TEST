/* pages/craft/craft.wxss */
page {
  background: linear-gradient(135deg, #1a0a0a 0%, #2d1515 50%, #1a0a0a 100%);
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  color: #e8d5b0;
}

.top-bar {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: linear-gradient(180deg, rgba(139, 69, 19, 0.9) 0%, rgba(101, 67, 33, 0.85) 100%);
  border-bottom: 2rpx solid #d4a056;
}

.back-btn {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 8rpx;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #ffd700;
  font-weight: bold;
}

.main-content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder {
  font-size: 32rpx;
  color: #888;
}
