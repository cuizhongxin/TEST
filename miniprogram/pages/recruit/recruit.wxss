/* pages/recruit/recruit.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 16rpx;
  display: block;
}

.recruit-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.recruit-card {
  flex: 1;
  padding: 24rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  text-align: center;
  border: 2rpx solid #8b6914;
}

.recruit-card.premium {
  border-color: #9932cc;
  background: rgba(153,50,204,0.2);
}

.recruit-card.ten {
  border-color: #ff8c00;
  background: rgba(255,140,0,0.2);
}

.recruit-name {
  font-size: 28rpx;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.recruit-desc {
  font-size: 22rpx;
  color: #ff6b6b;
  display: block;
  margin-bottom: 4rpx;
}

.recruit-tip {
  font-size: 20rpx;
  color: #aaa;
}

.owned-section {
  margin-bottom: 30rpx;
}

.general-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.general-card {
  width: calc(25% - 12rpx);
  padding: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  text-align: center;
}

.general-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 auto 8rpx;
  border: 2rpx solid #8b6914;
}

.general-avatar image {
  width: 100%;
  height: 100%;
}

.general-name {
  font-size: 24rpx;
  display: block;
  font-weight: bold;
}

.general-level {
  font-size: 20rpx;
  color: #7fff00;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  width: 80%;
  max-height: 70vh;
  background: #4a3728;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 2rpx solid #8b6914;
}

.modal-title {
  font-size: 32rpx;
  color: #ffd700;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}

.result-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
  margin-bottom: 20rpx;
}

.result-item {
  text-align: center;
  padding: 16rpx;
}

.result-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 auto 8rpx;
  border: 3rpx solid #ffd700;
}

.result-avatar image {
  width: 100%;
  height: 100%;
}

.result-name {
  font-size: 26rpx;
  display: block;
  font-weight: bold;
}

.result-quality {
  font-size: 20rpx;
  color: #aaa;
}

.modal-btn {
  text-align: center;
  padding: 16rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 8rpx;
  color: #ffd700;
  font-size: 28rpx;
}

.resource-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: rgba(0,0,0,0.8);
  color: #ffd700;
  font-size: 26rpx;
}
