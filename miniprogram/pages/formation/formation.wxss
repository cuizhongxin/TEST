/* pages/formation/formation.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 16rpx;
  display: block;
}

.formation-section {
  margin-bottom: 30rpx;
}

.formation-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.formation-item {
  padding: 16rpx 24rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.formation-item.active {
  border-color: #ffd700;
  background: rgba(255,215,0,0.2);
}

.formation-name {
  font-size: 26rpx;
  color: #fff;
  display: block;
}

.formation-desc {
  font-size: 20rpx;
  color: #7fff00;
}

.battle-section {
  background: rgba(0,0,0,0.3);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.battle-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
}

.battle-slot {
  width: 140rpx;
  height: 160rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 12rpx;
  border: 2rpx dashed #8b6914;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.slot-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid #ffd700;
}

.slot-avatar image {
  width: 100%;
  height: 100%;
}

.slot-name {
  font-size: 22rpx;
  color: #fff;
  margin-top: 8rpx;
}

.slot-empty {
  font-size: 48rpx;
  color: #654321;
}

.slot-label {
  font-size: 22rpx;
  color: #888;
}

.remove-btn {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 36rpx;
  height: 36rpx;
  background: #ff4444;
  border-radius: 50%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 36rpx;
}

.save-btn {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 12rpx;
  color: #ffd700;
  font-size: 32rpx;
  font-weight: bold;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  width: 80%;
  max-height: 70vh;
  background: #4a3728;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 2rpx solid #8b6914;
}

.modal-title {
  font-size: 32rpx;
  color: #ffd700;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}

.general-list {
  max-height: 50vh;
}

.general-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.general-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 16rpx;
  border: 2rpx solid #8b6914;
}

.general-avatar image {
  width: 100%;
  height: 100%;
}

.general-info {
  flex: 1;
}

.general-name {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
}

.general-level {
  font-size: 22rpx;
  color: #aaa;
}

.empty-tip {
  text-align: center;
  color: #aaa;
  padding: 40rpx;
}

.modal-btn {
  margin-top: 20rpx;
  text-align: center;
  padding: 16rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 8rpx;
  color: #ffd700;
  font-size: 28rpx;
}
