/* pages/index/index.wxss */
page {
  background: linear-gradient(180deg, #3d2817 0%, #5a3d2b 50%, #3d2817 100%);
  height: 100vh;
  overflow: hidden;
}

.game-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  color: #f0e6d2;
  font-family: 'STKaiti', 'KaiTi', serif;
}

/* ==================== 顶部资源栏 ==================== */
.top-bar {
  display: flex;
  padding: 6rpx 10rpx;
  background: linear-gradient(180deg, #2a1a0f 0%, #3d2817 100%);
  border-bottom: 2rpx solid #8b6914;
  gap: 12rpx;
  flex-shrink: 0;
}

.user-section {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding-right: 12rpx;
  border-right: 1rpx solid #5a4a3a;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 6rpx;
  border: 2rpx solid #c9a227;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 16rpx;
  color: #ffd700;
  font-weight: bold;
}

.level {
  font-size: 12rpx;
  color: #c9a227;
}

.exp-bar {
  width: 90rpx;
  height: 10rpx;
  background: #1a1a1a;
  border: 1rpx solid #5a4a3a;
  border-radius: 5rpx;
  position: relative;
  overflow: hidden;
}

.exp-fill {
  height: 100%;
  background: linear-gradient(90deg, #228b22, #32cd32);
}

.exp-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 8rpx;
  color: #fff;
  text-shadow: 0 0 2rpx #000;
}

.resource-grid {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 3rpx 10rpx;
}

.resource-item {
  display: flex;
  gap: 3rpx;
  font-size: 12rpx;
}

.res-label { color: #a89070; }
.res-value { color: #f0e6d2; }
.res-value.gold { color: #ffd700; }
.res-value.silver { color: #c0c0c0; }

/* ==================== 我的武将横栏（最多6个） ==================== */
.generals-bar-inner {
  display: flex;
  align-items: center;
  padding: 6rpx;
  background: rgba(0,0,0,0.3);
  border: 1rpx solid #5a4a3a;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
  gap: 6rpx;
}

.generals-title {
  font-size: 11rpx;
  color: #ffd700;
  white-space: nowrap;
  padding-right: 6rpx;
  border-right: 1rpx solid #5a4a3a;
  writing-mode: vertical-lr;
  text-orientation: mixed;
}

.generals-row {
  flex: 1;
  display: flex;
  gap: 6rpx;
}

.general-card-mini {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 3rpx;
  background: rgba(0,0,0,0.3);
  border: 1rpx solid #5a4a3a;
  border-radius: 4rpx;
}

.card-avatar-mini {
  width: 36rpx;
  height: 36rpx;
  border-radius: 4rpx;
  border: 2rpx solid;
}

.card-name-mini {
  font-size: 9rpx;
  color: #c9a227;
  margin-top: 2rpx;
  max-width: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.add-card-mini {
  border-style: dashed;
  border-color: #8b6914;
}

.add-icon-mini {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #8b6914;
}

/* ==================== 主内容区 ==================== */
.main-content {
  flex: 1;
  display: flex;
  padding: 6rpx;
  gap: 6rpx;
  overflow: hidden;
}

/* ==================== 左右悬浮栏 ==================== */
.left-sidebar, .right-sidebar {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  gap: 6rpx;
  width: 50rpx;
  flex-shrink: 0;
  padding: 4rpx 0;
  overflow: hidden;
}

.sidebar-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4rpx 3rpx;
  background: linear-gradient(180deg, rgba(74, 58, 40, 0.9) 0%, rgba(58, 42, 24, 0.9) 100%);
  border: 1rpx solid #8b6914;
  border-radius: 6rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.icon-emoji {
  font-size: 18rpx;
}

.icon-label {
  font-size: 9rpx;
  color: #c9a227;
  margin-top: 1rpx;
}

/* ==================== 中间主区域 - 可滚动 ==================== */
.center-area {
  flex: 1;
  height: 100%;
}

/* 功能按钮区 */
.function-section {
  display: flex;
  gap: 10rpx;
  padding: 8rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

/* 功能按钮网格 */
.function-grid {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 10rpx;
}

.function-grid-full {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.func-row {
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.func-btn {
  width: 90rpx;
  height: 50rpx;
  background: linear-gradient(180deg, #f5e6c8 0%, #d4c4a0 50%, #c4b490 100%);
  border: 2rpx solid #8b7355;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    inset 0 2rpx 3rpx rgba(255,255,255,0.3),
    0 3rpx 5rpx rgba(0,0,0,0.4);
}

.func-text {
  font-size: 20rpx;
  color: #3d2817;
  font-weight: bold;
  text-shadow: 0 1rpx 0 rgba(255,255,255,0.5);
}


/* ==================== 功能图标栏 ==================== */
.func-icons-section {
  background: rgba(0,0,0,0.2);
  border-radius: 8rpx;
  padding: 8rpx;
}

.func-icons {
  display: flex;
  justify-content: space-around;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4rpx 8rpx;
}

.icon-img {
  width: 45rpx;
  height: 45rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #4a3a28 0%, #3a2a18 100%);
  border: 2rpx solid #8b6914;
  border-radius: 8rpx;
}

.icon-name {
  font-size: 12rpx;
  color: #c9a227;
  margin-top: 3rpx;
}

/* ==================== 聊天栏 ==================== */
.chat-bar {
  display: flex;
  align-items: center;
  padding: 6rpx 10rpx;
  background: linear-gradient(180deg, #2a1a0f 0%, #1a0a00 100%);
  border-top: 2rpx solid #5a4a3a;
  flex-shrink: 0;
}

.chat-label {
  font-size: 14rpx;
  color: #c9a227;
  padding: 3rpx 8rpx;
  background: #3d2817;
  border: 1rpx solid #5a4a3a;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.chat-text {
  flex: 1;
  font-size: 14rpx;
  color: #90ee90;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
