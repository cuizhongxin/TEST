/* pages/index/index.wxss */
page {
  background: linear-gradient(180deg, #8b7355 0%, #6b5344 50%, #4a3728 100%);
  height: 100vh;
  overflow: hidden;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  color: #3d2b1f;
}

/* ========== 顶部状态栏 ========== */
.top-status {
  padding: 2rpx 10rpx;
  background: linear-gradient(180deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 100%);
  flex-shrink: 0;
}

.player-section {
  display: flex;
  align-items: flex-start;
}

/* 头像区域 */
.avatar-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.player-avatar {
  width: 44rpx;
  height: 44rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
  border: 2rpx solid #ffd700;
}

.level-badge {
  background: #8b0000;
  color: #fff;
  font-size: 9rpx;
  padding: 0 5rpx;
  border-radius: 2rpx;
  margin-top: 1rpx;
}

.mini-exp-bar {
  width: 44rpx;
  height: 4rpx;
  background: #2d2d2d;
  border-radius: 2rpx;
  margin-top: 1rpx;
  overflow: hidden;
}

.mini-exp-fill {
  height: 100%;
  background: linear-gradient(90deg, #228b22 0%, #32cd32 100%);
  border-radius: 2rpx;
}

/* 资源区域 */
.resource-area {
  flex: 1;
  min-width: 0;
}

.info-line {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 2rpx;
}

.player-name {
  font-size: 14rpx;
  color: #ffd700;
  font-weight: bold;
}

.stat {
  font-size: 10rpx;
  color: #e8d5b0;
}

.resource-row {
  display: flex;
  gap: 10rpx;
}

.resource-item {
  display: flex;
  align-items: center;
  gap: 3rpx;
}

.res-label {
  font-size: 9rpx;
  color: #aaa;
}

.res-value {
  font-size: 10rpx;
  color: #ffd700;
  font-weight: bold;
}

.res-value.gold {
  color: #ffd700;
}

.res-value.silver {
  color: #c0c0c0;
}

/* ========== 主内容区域 ========== */
.main-content {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 左右侧悬浮图标 - 覆盖在内容上 */
.side-panel {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 44rpx;
  display: flex;
  flex-direction: column;
  gap: 3rpx;
  padding: 3rpx 2rpx;
  justify-content: space-evenly;
  z-index: 10;
}

.side-panel.left {
  left: 0;
  background: linear-gradient(90deg, rgba(60,40,20,0.85) 0%, rgba(60,40,20,0) 100%);
}

.side-panel.right {
  right: 0;
  background: linear-gradient(270deg, rgba(60,40,20,0.85) 0%, rgba(60,40,20,0) 100%);
}

.side-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 3rpx 2rpx;
  background: rgba(139,69,19,0.8);
  border: 1rpx solid #8b6914;
  border-radius: 4rpx;
}

.side-btn:active {
  background: rgba(139,69,19,0.95);
}

.side-icon {
  font-size: 14rpx;
}

.side-label {
  font-size: 8rpx;
  color: #ffd700;
  line-height: 1;
}

/* 中间内容区域 - 不再滚动 */
.center-scroll {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 44rpx;
  right: 44rpx;
  display: flex;
  flex-direction: column;
}

/* ========== 武将栏 ========== */
.generals-row {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  padding: 6rpx 4rpx;
  flex-shrink: 0;
}

.general-slot {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rpx;
}

.general-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 4rpx;
  background: rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 2rpx solid #8b6914;
  overflow: hidden;
}

.general-avatar image {
  width: 100%;
  height: 100%;
}

.general-avatar.empty {
  color: #654321;
  font-size: 20rpx;
  border-style: dashed;
}

/* ========== 功能按钮区域 ========== */
.function-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
}

.func-row {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

/* 卷轴按钮样式 */
.scroll-btn {
  width: 90rpx;
  height: 46rpx;
  background: linear-gradient(180deg, #f5e6c8 0%, #d4c4a8 50%, #c4b498 100%);
  border: 2rpx solid #8b6914;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.4);
  padding: 0rpx 8rpx;
}


.scroll-text {
  font-size: 28rpx;
  color: #3d2b1f;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0 rgba(255,255,255,0.5);
}

.scroll-btn:active {
  transform: scale(0.95);
  background: linear-gradient(180deg, #e8d5b0 0%, #c4b498 50%, #b4a488 100%);
}

/* ========== 底部功能图标 ========== */
.bottom-icons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 6rpx 0;
  flex-shrink: 0;
}

.bottom-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rpx 18rpx;
}

.bottom-icon {
  font-size: 22rpx;
}

.bottom-label {
  font-size: 10rpx;
  color: #ffd700;
  margin-top: 2rpx;
}

.bottom-btn:active {
  opacity: 0.7;
}

/* ========== 聊天栏 ========== */
.chat-bar {
  display: flex;
  align-items: center;
  padding: 4rpx 10rpx;
  background: rgba(0,0,0,0.7);
  border-top: 2rpx solid #654321;
  flex-shrink: 0;
}

.chat-label {
  padding: 3rpx 10rpx;
  background: linear-gradient(180deg, #8b6914 0%, #654321 100%);
  border-radius: 3rpx;
  font-size: 12rpx;
  color: #ffd700;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.chat-content {
  flex: 1;
  overflow: hidden;
}

.chat-msg {
  font-size: 10rpx;
  color: #7fff00;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
